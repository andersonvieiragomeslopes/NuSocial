<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NuSocial.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:NuSocial.Views"
    xmlns:local="clr-namespace:NuSocial">

    <TabBar>
        <ShellContent
            Title="Profile"
            Icon="iconblank.png"
            ContentTemplate="{DataTemplate views:ProfilePage}" />
        <ShellContent
            Title="Timeline"
            Icon="iconlistdetail.png"
            ContentTemplate="{DataTemplate views:TimelinePage}" />
        <ShellContent
            Title="Localization"
            Icon="iconlocalization.png"
            ContentTemplate="{DataTemplate views:LocalizationPage}" />
    </TabBar>
</Shell>
