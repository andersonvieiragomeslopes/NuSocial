<?xml version="1.0" encoding="utf-8" ?>
<local:BetterUraniumContentPage
    x:Class="NuSocial.Views.TimelinePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:local="clr-namespace:NuSocial"
    xmlns:m="clr-namespace:NuSocial.Models"
    xmlns:mex="clr-namespace:NuSocial.MarkupExtensions"
    xmlns:uranium="clr-namespace:UraniumUI.Pages;assembly=UraniumUI"
    xmlns:vm="clr-namespace:NuSocial.ViewModels"
    Title="{mex:LocString Home}"
    x:DataType="vm:TimelineViewModel"
    x:TypeArguments="vm:TimelineViewModel">

    <uranium:UraniumContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SecondaryContainer}, Dark={StaticResource SecondaryContainerDark}}" />
        </Style>
        <DataTemplate x:Key="postTemplate" x:DataType="m:Post">
            <Grid Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="15" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TimelineViewModel}}, Path=GoToDetailsCommand}" CommandParameter="{Binding .}" />
                </Grid.GestureRecognizers>
                <Image
                    Grid.RowSpan="2"
                    Margin="0,0,10,0"
                    Aspect="AspectFill"
                    HeightRequest="60"
                    VerticalOptions="Start"
                    WidthRequest="60">
                    <Image.Source>
                        <UriImageSource CacheValidity="00:00:15:00" Uri="{Binding Contact.Picture.Url}" />
                    </Image.Source>
                    <Image.Clip>
                        <RoundRectangleGeometry CornerRadius="15" Rect="0,0,60,60" />
                    </Image.Clip>
                </Image>
                <Grid Grid.Column="1" ColumnDefinitions="Auto,Auto,*">
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        Text="{Binding Contact.PetName}" />
                    <Label
                        Grid.Column="1"
                        Margin="5,0"
                        Text="{Binding Contact.Nip05}"
                        TextColor="Gray" />
                    <Label
                        Grid.Column="2"
                        FontSize="10"
                        HorizontalOptions="End"
                        Text="{Binding CreatedAt}"
                        TextColor="Gray" />
                </Grid>

                <Frame
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,5,0,0"
                    Padding="10"
                    CornerRadius="10"
                    HorizontalOptions="StartAndExpand">
                    <Label Text="{Binding Source={RelativeSource AncestorType={x:Type m:Post}}, Path=Content, Converter={StaticResource markdownConverter}}" TextType="Html" />
                </Frame>
                <Grid
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    ColumnDefinitions="Auto,Auto,Auto,Auto"
                    HorizontalOptions="StartAndExpand">
                    <Image
                        Grid.Column="0"
                        Margin="2"
                        HeightRequest="16"
                        ToolTipProperties.Text="{mex:LocString Reply}">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="FARegular"
                                Glyph="{x:Static fa:Regular.Comment}"
                                Color="Gray" />
                        </Image.Source>
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TimelineViewModel}}, Path=ReplyToPostCommand}" CommandParameter="{Binding .}" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image
                        Grid.Column="1"
                        Margin="2"
                        HeightRequest="16">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="FARegular"
                                Glyph="{x:Static fa:Regular.Snowflake}"
                                Color="Gray" />
                        </Image.Source>
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TimelineViewModel}}, Path=BoostPostCommand}" CommandParameter="{Binding .}" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image
                        Grid.Column="2"
                        Margin="2"
                        HeightRequest="16">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="FARegular"
                                Glyph="{x:Static fa:Regular.Heart}"
                                Color="Gray" />
                        </Image.Source>
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TimelineViewModel}}, Path=ReactToPostCommand}" CommandParameter="{Binding .}" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image
                        Grid.Column="3"
                        Margin="2"
                        HeightRequest="16">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="FARegular"
                                Glyph="{x:Static fa:Regular.CircleDot}"
                                Color="Gray" />
                        </Image.Source>
                        <Image.GestureRecognizers>
                            <!--<TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TimelineViewModel}}, Path=ReactToPostCommand}" CommandParameter="{Binding .}" />-->
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </Grid>
        </DataTemplate>
        <local:ContentStringToMarkdownHtmlConverter x:Key="markdownConverter" />
    </uranium:UraniumContentPage.Resources>
    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,150">
            <SearchBar
                x:Name="searchBar"
                Grid.Column="0"
                Placeholder="{mex:LocString Search}"
                SearchCommand="{Binding PerformFilterCommand}"
                SearchCommandParameter="{Binding Source={x:Reference searchBar}, Path=Text}" />
            <Button
                Grid.Column="1"
                Margin="5,0"
                Padding="2"
                Command="{Binding LoadUnreadPostsCommand}"
                CornerRadius="5"
                Text="{Binding UnreadLabel}" />
        </Grid>
        <RefreshView
            Command="{Binding RefreshCommand}"
            IsRefreshing="{Binding IsRefreshing}"
            RefreshColor="Teal">
            <ScrollView>
                <VerticalStackLayout
                    BindableLayout.ItemTemplate="{StaticResource postTemplate}"
                    BindableLayout.ItemsSource="{Binding Items}"
                    HorizontalOptions="StartAndExpand">
                    <BindableLayout.EmptyView>
                        <Label
                            FontAttributes="Italic"
                            Opacity="0.5"
                            Text="No recent posts" />
                    </BindableLayout.EmptyView>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
        <!--<CollectionView
                    Margin="0,15,0,0"
                    HorizontalOptions="FillAndExpand"
                    ItemSizingStrategy="MeasureFirstItem"
                    ItemsLayout="VerticalList"
                    ItemsSource="{Binding Items}"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Always">
            <CollectionView.ItemTemplate>

            </CollectionView.ItemTemplate>
            <CollectionView.EmptyViewTemplate>
                <DataTemplate>
                    <Label
                                Margin="10,25,10,10"
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Fill"
                                HorizontalTextAlignment="Center"
                                Text="{Binding Filter, StringFormat='Your filter term of {0} did not match any records.'}" />
                </DataTemplate>
            </CollectionView.EmptyViewTemplate>
        </CollectionView>-->
        <BoxView
            BackgroundColor="White"
            HorizontalOptions="Start"
            WidthRequest="1" />
    </VerticalStackLayout>

</local:BetterUraniumContentPage>
